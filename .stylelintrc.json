{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": "tab",
    "no-empty-source": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "for",
          "include",
          "mixin"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "text-direction"
        ]
      }
    ],
    "selector-pseudo-element-colon-notation": "single"
  }
}